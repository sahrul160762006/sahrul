var nama=e.values[1]; //membaca email pada kolom kolom B
var email=e.values[2]; //membaca kolom ke kolom C
var pesan=e.values[3]; //membaca kolom kolom D

  var subject="PESAN DI TERIMA"; //subject yang akan tampil di email kita

  var message=createHTMLHeader();

  message+="<div dir="auto" style="background-color: #18c7a1; border-radius: 4px; border: 0px; color: #000112; font-family: roboto, sans-serif; font-size: 14px; line-height: inherit; margin: 0px; padding: 0px; vertical-align: baseline;"><div style="background: rgb(242, 242, 242); border-radius: 10px; border: 1px solid rgb(24, 199, 161); font-family: inherit; font-size: 0.9rem; font-style: inherit; font-variant: inherit; line-height: inherit; margin: 1em 0px; max-width: 100%; padding: 10px; vertical-align: baseline;"><h2 style="background: rgb(24, 199, 161); border-radius: 4px; border: 0px; color: white; font-family: inherit; font-size: 15px; font-style: inherit; font-variant: inherit; font-weight: inherit; line-height: inherit; margin: 0px 0px 0.6rem; padding: 0px 0px 0px 5px; text-align: center; text-transform: uppercase; vertical-align: baseline;"><span style="font-family: inherit; font-style: inherit; font-weight: inherit;">SAHRUL ID ~ PESAN OTOMATIS</span></h2><div dir="auto"><div dir="auto" style="background-color: white; border-radius: 4px; border: 0px; font-size: 14px; line-height: inherit; margin: 0px; padding: 0px; vertical-align: baseline;"><div style="background: rgb(242, 242, 242); border-radius: 10px; border: 1px solid rgb(24, 199, 161); font-family: inherit; font-size: 0.9rem; font-style: inherit; font-variant: inherit; line-height: inherit; margin: 1em 0px; max-width: 100%; padding: 10px; vertical-align: baseline;"><h2 style="background: rgb(24, 199, 161); border-radius: 4px; border: 0px; color: white; font-family: inherit; font-size: 15px; font-style: inherit; font-variant: inherit; font-weight: inherit; line-height: inherit; margin: 0px 0px 0.6rem; padding: 0px 0px 0px 5px; text-align: center; text-transform: uppercase; vertical-align: baseline;">Pesan masuk</h2><div dir="auto" style="text-align: center;"><span style="font-family: inherit; font-style: inherit; font-weight: inherit;">Hai </span><span style="font-family: inherit; font-style: inherit;"